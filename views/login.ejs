<% layout('/layout/page') %>
<% block('title', "Login") %>

<form class="form-horizontal login-form" name="login-form">
  <div class="form-group">
    <div class="col-lg-10">
      <input name="username" value="name" type="text" class="form-control" id="input-username" placeholder="email">
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10">
      <input name="password" value="pass" type="password" class="form-control" id="input-password" placeholder="password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <button type="submit" class="btn btn-primary" data-loading-text="sending...">Login</button>
      <span class="help-block error"></span>
    </div>
  </div>
</form>

